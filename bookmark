#!/bin/bash
# Bookmark CLI Global Wrapper Script
# This script ensures the bookmark CLI works from any directory

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Change to the project directory to ensure .env is loaded
cd "$SCRIPT_DIR"

# Execute the bookmark CLI with all arguments
exec "$SCRIPT_DIR/bin/bookmark" "$@"



